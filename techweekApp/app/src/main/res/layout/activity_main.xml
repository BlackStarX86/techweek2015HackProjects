<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Caffeine Rush" android:textSize="35dp" android:textColor="#ffffff" android:layout_width="wrap_content" android:layout_centerHorizontal="true"
        android:id="@+id/text" android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp" android:layout_below="@+id/text" android:src="@drawable/coffeebean2"
        android:id="@+id/coffee" android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/tea" android:layout_below="@+id/coffee" android:id="@+id/tea2"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="80dp" android:src="@drawable/redbull" android:layout_alignParentRight="true"
        android:layout_below="@id/coffee"
        android:id="@+id/Redbull2"
         />
    <EditText
        android:layout_width="60dp"
        android:layout_height="25dp" android:id="@+id/coffeeinput" android:background="#ffffff" android:layout_below="@id/coffee" android:layout_centerInParent="true"/>
    <EditText
        android:layout_width="60dp"
        android:layout_height="25dp" android:id="@+id/teainput" android:background= "#ffffff" android:layout_below="@id/tea2" android:layout_alignParentRight="true" android:layout_marginRight="15dp"/>
    <EditText
        android:layout_width="60dp"
        android:layout_height="25dp" android:id="@+id/Redbullinput" android:background="#ffffff" android:layout_below="@id/Redbull2" android:layout_alignParentLeft="true" android:layout_marginLeft="20dp" android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="click"
        android:paddingLeft="15dp" android:paddingRight="15dp" android:text="Calculate!" android:textSize="20sp" android:textColor="#ff0000" android:background="#ffffff" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
